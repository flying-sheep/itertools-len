{
    "emeraldwalk.runonsave": {
        "commands": [{
            "match": ".*",
            "isAsync": true,
            "cmd": "pre-commit run --files ${file}"
        }]
    },
    "python.analysis.extraPaths": ["src"],
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["--cov=src", "--cov-report=xml"],
}
