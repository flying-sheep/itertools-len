{
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["--color=yes"],
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": true,
        }
    }
}
